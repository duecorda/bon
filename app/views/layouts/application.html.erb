<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <%= yield :head %>
  <%= csrf_meta_tags %>
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
  <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Open+Sans&Droid+Sans+Mono">
  <meta name="keywords" content="<%= meta_keywords %>" />
  <meta name="description" content="<%= meta_description %>" />
  <meta name="viewport" content="user-scalable=yes, width=device-width, initial-scale=1" />
</head>
<body>
  <div id="flash_message" class="fragile"><%= flash_message %></div>

  <header>
    <div class="grid">
      <div class="col-2-12">
        <%= link_to "Bon", root_path, id: "logo" %>
      </div>
      <div class="col-10-12">
      <nav>
        <% if logged_in? %>
          <%= link_to "#{icon('sign-out fa-fw')} 로그아웃".html_safe, signout_path, class: "" %>
        <% else %>
          <%= link_to "#{icon('sign-in')} 로그인".html_safe, signin_path, class: "btn" %>
        <% end %>
      </nav>
      </div>
    </div>
  </header>

  <section>
    <%= yield %>
  </section>

  <footer>
    2015
  </footer>

  <div id="loader">
    <div class="bounce1"></div>
    <div class="bounce2"></div>
    <div class="bounce3"></div>
  </div>

  <script>
    $(document).ready(function() {
      attachLoaderToForm()
      initFragileElement();
      initElasticTextarea();
      hide_flash_message();
      initSmartFocus();
      $('pre.code').each(function(i, block) {
        hljs.highlightBlock(block);
      });
    });
  </script>

</body>
</html>
