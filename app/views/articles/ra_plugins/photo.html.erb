<section id="redactor-modal-photo" class="modal">

  <div class="ra_widget">
    <label>새로운 사진 등록</label>
    <div class="ra_widget_content">
      <%= link_to "#upload_photo", :id => "photo_upload_indicator", :class => "fn btn", :"data-fn" => "do_upload", :"data-args" => "photo_uploader" do %>
        <div class="finder"><%= icon('search') %> <span>사진 파일 찾기</span></div>
        <div class="progress"><%= icon("cog fa-spin fa-inverse") %></div>
      <% end %>

      <%= form_for Photo.new, :html => { :class => "invisible" } do |f| %>
        <input id="photo_uploader" type="file" name="files[]" style="visibility:hidden;" multiple>
      <% end %>
    </div>
  </div>

  <hr class="orhr" />

  <div class="ra_widget">
    <label>등록된 사진 검색</label>
    <div class="ra_widget_content">

      <%= form_tag search_photos_path, method: :get, class: 'inline', remote: true do %>
        <div class="group">
          <%= text_field_tag :keyword, nil, :class => "text", :placeholder => "검색어", :autocomplete => "off" %>
          <%= button_tag "검색", :class => "submit" %>
        </div>
      <% end %>

      <div id="matched_photos" class="image_injector"></div>
    </div>
  </div>

</section>
